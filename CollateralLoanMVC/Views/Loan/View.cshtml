@model CollateralLoanMVC.ViewModels.ViewLoanViewModel
<form>
	<div id="@nameof(Loan)" class="container-fluid px-0">
		<h4>Loan</h4>
		<div class="px-3 bg-light border">
			<div class="row py-3">
				<div class="col-4">
					<label for="@string.Concat(nameof(Loan), "_", nameof(Loan.Id))" class="">Loan Id</label>
