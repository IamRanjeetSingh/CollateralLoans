					<input id="@string.Concat(nameof(Loan), "_", nameof(Loan.Type))" class="form-control" value="@Model.Loan.Type" disabled />
				</div>
			</div>
			<div class="row py-3">
				<div class="col-4">
					<label for="@string.Concat(nameof(Loan), "_", nameof(Loan.Principal))" class="">Principal</label>
					<input id="@string.Concat(nameof(Loan), "_", nameof(Loan.Principal))" class="form-control" value="@Model.Loan.Principal" disabled />
				</div>
				<div class="col-4">
					<label for="@string.Concat(nameof(Loan), "_", nameof(Loan.Interest))" class="">Interest</label>
					<input id="@string.Concat(nameof(Loan), "_", nameof(Loan.Interest))" class="form-control" value="@Model.Loan.Interest" disabled />
				</div>
				<div class="col-4">
					<label for="@string.Concat(nameof(Loan), "_", nameof(Loan.Emi))" class="">Emi</label>
