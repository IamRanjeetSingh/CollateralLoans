			</div>
			<div class="row py-3">
				<div class="col-4">
					<label for="@string.Concat(nameof(Risk), "_", nameof(Risk.Raw))" class="">Raw</label>
					<input id="@string.Concat(nameof(Risk), "_", nameof(Risk.Raw))" class="form-control" value="@Model.Risk.Raw" disabled />
				</div>
				<div class="col-4">
					<label for="@string.Concat(nameof(Risk), "_", nameof(Risk.Percent))" class="">Percet</label>
					<input id="@string.Concat(nameof(Risk), "_", nameof(Risk.Percent))" class="form-control" value="@Model.Risk.Percent" disabled />
				</div>
			</div>
			<div class="row py-3">
				<div class="col-4">
					<label for="@string.Concat(nameof(Risk), "_", nameof(Risk.LastAssessDate))" class="">Last Assess Date</label>
					<input id="@string.Concat(nameof(Risk), "_", nameof(Risk.LastAssessDate))" class="form-control" value="@Model.Risk.LastAssessDate" disabled />
				</div>
			</div>
		</div>
